{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext", //EDIT

        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": false, //EDIT:
        "noUnusedLocals": false, //EDIT:
        "noEmitOnError": false, //EDIT:,
        "noEmit": false, //ADD:,
        "exactOptionalPropertyTypes": false, //EDIT FOR ZOD
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": true,
        "allowUnreachableCode": true, //EDIT:
        "forceConsistentCasingInFileNames": true,
        "incremental": false, //EDIT:,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "isolatedModules": true,
        "declaration": false, //EDIT
        "declarationMap": false, //EDIT
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "src", //EDIT
        "baseUrl": "src", //EDIT
        "moduleResolution": "bundler", //EDIT
        "typeRoots": ["node_modules/@types", "types/", ".next/types/**/*.ts"], //EDIT
        "lib": ["dom", "dom.iterable", "esnext"], //EDIT
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        //
        //ADD LINES
        //
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowUnusedLabels": true,
        "allowJs": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "types",
        ".next/types/**/*.ts",
        "main.ts"
    ],
    "exclude": ["node_modules", ".next"]
}
